<p id="notice"><%= notice %></p>

<h1>Cripto Moedas</h1>

<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Sigla</th>
      <th>imagem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>

        <!-- Formas de utilizar o helper de imagens
          
          <td><img src="<%= coin.url_image %>" width="20"></td>

          Ou só com ruby: <td><%= image_tag coin.url_image, width:25, height:25 %></td>
        -->
        <td><%= image_tag coin.url_image, width:25, height:25 %></td>
        <td><%= link_to 'Mostrar', coin %></td>
        <td><%= link_to 'Editar', edit_coin_path(coin) %></td>
        <td><%= link_to 'Excluir', coin, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

